<?php
// file verifyUgp
// fn fuse(name)

function vGP($pgGp,$uid)
{
  include_once '../plib/ufuse.php';
  fuse('log');
  fuse('dbGet');
  // does user have a gp setting that matches
  $sq = "select MID from fact where usrGpMid = '$uid' and usrGpGp = '$pgGp';";
  $ans = readDB($dbh,$sq);
  if (count($ans) != 0)
  {
    return('ok');
  } else {
    return('nok');
  }
} // vGP

?>

